# Anti-ban settings (all optional with defaults)
# Minimum delay between messages (seconds)
MIN_DELAY=3
# Maximum delay between messages (seconds)
MAX_DELAY=5
# Maximum number of messages per day
DAILY_LIMIT=1000
# Maximum number of messages per hour
HOURLY_LIMIT=100
# Maximum number of media messages per day
DAILY_MEDIA_LIMIT=500
# Maximum messages to process before taking a longer break
MAX_BATCH_SIZE=50
# Cooldown time after reaching batch size (seconds)
BATCH_COOLDOWN=300
# Reduce activity during night hours (true/false)
NIGHT_MODE=true
# Night mode start hour (24h format)
NIGHT_START=0
# Night mode end hour (24h format)
NIGHT_END=7
# Multiply delays by this factor during night hours
NIGHT_MULTIPLIER=2.0
# Reduce activity during weekends (true/false)
WEEKEND_MODE=false
# Multiply delays by this factor during weekends
WEEKEND_MULTIPLIER=1.5